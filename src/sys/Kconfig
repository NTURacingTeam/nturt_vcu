menuconfig VCU_SYS
	bool "Basic system support"
	select LOG
	select SETTINGS
	select NTURT_SYS
	select NTURT_FS

if VCU_SYS

config VCU_SHELL
	bool "Shell support"
	select SETTINGS_SHELL
	select NTURT_SHELL

config RTC_SHELL
	default y
config GPIO_SHELL
	default y
config PWM_SHELL
	default y
config ADC_SHELL
	default y
config UART_SHELL
	default y
config I2C_SHELL
	default y
config SPI_SHELL
	default y

endif # VCU_SYS
